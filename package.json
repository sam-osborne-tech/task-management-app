{
  "name": "task-management-app",
  "version": "1.0.0",
  "description": "Full-stack task management application",
  "scripts": {
    "postinstall": "npm install --prefix backend && npm install --prefix frontend",
    "build": "npm run build --prefix frontend && npm run copy:frontend",
    "copy:frontend": "mkdir -p backend/public && cp -r frontend/dist/* backend/public/",
    "start": "npm start --prefix backend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "test": "npm test --prefix backend && npm test --prefix frontend",
    "test:backend": "npm test --prefix backend",
    "test:frontend": "npm test --prefix frontend",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "task",
    "management",
    "react",
    "express",
    "fullstack"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1"
  }
}
